<style>
  .comparison-chart {
    padding: 16px;
    background: #F8F3E7;
  }
  @media (min-width: 768px) {
    
  }

  @media (min-width: 768px) {
    .comparison-chart {
      padding: 64px;
    }
  }

  .comparison-chart__top-rip {
    transform: translateY(-50%);
  }

  .comparison-chart__content {
    position: relative;
    z-index: 0;
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    max-width: 1132px;
    text-align: center;
  }
  @media (min-width: 768px) {
    .comparison-chart__content {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }

  .comparison-chart__title--desktop {
    color: #593E41;
    font-weight: 800;
    font-size: 36px;
    line-height: 120%;
    max-width: 100%;
    margin-top: 0;
    margin-bottom: 64px;
  }

  @media (max-width: 767px) {
    .comparison-chart__title--desktop {
      display: none;
    }
  }

  .comparison-chart__title--mobile {
    color: #593E41;
    font-weight: 800;
    font-size: 28px;
    line-height: 120%;
    margin-top: 0;
    margin-bottom: 32px;
  }

  @media (min-width: 768px) {
    .comparison-chart__title--mobile {
      display: none;
    }
  }

  .comparison-chart__image {
    margin: 0 auto;
    width: 80%;
    max-width: 1067px;
  }

  .comparison-chart__cta {
    margin: 40px auto 0;
  }
  @media (min-width: 768px) {
    .comparison-chart__cta {
      margin: 80px auto 0;
    }
  }

  .comparison-chart__graphic-left {
    position: absolute;
    z-index: -1;
    left: -185px;
    bottom: -200px;
    width: 220px;
  }

  @media (min-width: 768px) {
    .comparison-chart__graphic-left {
      left: -315px;
      bottom: -55px;
      width: 300px;
    }
  }

  .comparison-chart__graphic-left svg {
    width: 100%;
    height: auto;
    fill: #ff78b4;
  }

  .comparison-chart__graphic-right {
    position: absolute;
    z-index: -1;
    right: -175px;
    top: 22px;
    transform: rotate(120deg);
    width: 220px;
  }

  @media (min-width: 768px) {
    .comparison-chart__graphic-right {
      right: -275px;
      top: -58px;
      width: 290px;
    }
  }

  .comparison-chart__graphic-right svg {
    width: 100%;
    height: auto;
    fill: #e6ff00;
  }
</style>

<section class="comparison-chart" data-section-name="Comparison chart">
  <div class="comparison-chart__content">
    <h2 class="comparison-chart__title--desktop">{{ section.settings.title_desktop }}</h2>
    <h2 class="comparison-chart__title--mobile">{{ section.settings.title_mobile }}</h2>

    <picture>
      <source
        media="(max-width: 320px)"
        srcset="{{ section.settings.image_mobile | image_url: width: 320 }},
                {{ section.settings.image_mobile | image_url: width: 640 }} 2x">
      <source
        media="(max-width: 375px)"
        srcset="{{ section.settings.image_mobile | image_url: width: 375 }},
                {{ section.settings.image_mobile | image_url: width: 750 }} 2x">
      <source
        media="(max-width: 420px)"
        srcset="{{ section.settings.image_mobile | image_url: width: 420 }},
                {{ section.settings.image_mobile | image_url: width: 840 }} 2x">
      <source
        media="(max-width: 767px)"
        srcset="{{ section.settings.image_mobile | image_url: width: 768 }},
                {{ section.settings.image_mobile | image_url: width: 1536 }} 2x">
      <source
        media="(max-width: 1024px)"
        srcset="{{ section.settings.image_desktop | image_url: width: 1024 }},
                {{ section.settings.image_desktop | image_url: width: 2048 }} 2x">
      <img
        loading="lazy"
        class="comparison-chart__image"
        src="{{ section.settings.image_desktop | image_url: width: 1067 }}"
        srcset="{{ section.settings.image_desktop | image_url: width: 1067 }},
                {{ section.settings.image_desktop | image_url: width: 2134 }} 2x"
        alt="{{ section.settings.image_desktop.alt }}">
    </picture>

    {% if section.settings.cta_text != blank %}
      <a class="comparison-chart__cta primary-btn primary-button-full-width" href="{{ section.settings.cta_url }}">{{ section.settings.cta_text }}</a>
    {% endif %}
  </div>
</section>


{% schema %}
{
  "name": "OE Comparison Chart",
  "settings": [
    {
      "type": "header",
      "content": "Comparison Chart"
    },
    {
      "type": "text",
      "id": "title_desktop",
      "label": "Header Title",
      "default": "Our Bars are Head and Shoulders Above the Competition!"
    },
    {
      "type": "text",
      "id": "title_mobile",
      "label": "Header Title",
      "default": "Above the Competition!"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA URL"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text"
    }
  ],
  "presets": [
    {
      "name": "OE Comparison Chart",
      "category": "Layout"
    }
  ]
}
{% endschema %}
