{%- style -%}
  .oe-paragraph-{{ section.id }} {
    color: var(--oe-color-{{ section.settings.color_scheme }});
    text-align: {{ section.settings.mobile_align }};
    font-size: {{ section.settings.mobile_font_size }}px;
    line-height: 1.3;
  }
  
  @media screen and (min-width: 990px) {
    .oe-paragraph-{{ section.id }} {
      text-align: {{ section.settings.desktop_align }};
      font-size: {{ section.settings.desktop_font_size }}px;
    }
    
    .oe-paragraph-{{ section.id }}__section {
      max-width: {{ section.settings.max_width }}px;
    }
  }
{%- endstyle -%}

<section class="oe-paragraph-{{ section.id }}__section container">
  <p class="oe-paragraph-{{ section.id }}">
    {{ section.settings.paragraph }}
  </p>
</section>

{% schema %}
{
  "name": "OE Paragraph",
  "settings": [
    {
      "type": "text",
      "id": "paragraph",
      "default": "Paragraph text",
      "label": "Text"
    },
    {
      "type": "select",
      "id": "desktop_align",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left",
      "label": "Paragraph align - desktop"
    },
    {
      "type": "select",
      "id": "mobile_align",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left",
      "label": "Paragraph align - mobile"
    },
    {
      "type": "range",
      "id": "desktop_font_size",
      "min": 12,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Font size - desktop",
      "default": 32
    },
    {
      "type": "range",
      "id": "mobile_font_size",
      "min": 12,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Font size - mobile",
      "default": 24
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1300,
      "step": 20,
      "unit": "px",
      "label": "Max width",
      "default": 1300
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "red",
          "label": "Red"
        },
        {
          "value": "black",
          "label": "Black"
        },
        {
          "value": "white",
          "label": "White"
        },
        {
          "value": "orange",
          "label": "Orange"
        }
      ],
      "default": "black",
      "label": "Color"
    }
  ],
  "presets": [
    {
      "name": "OE Paragraph"
    }
  ]
}
{% endschema %}
