      "type": "featured-collection",
      "name": "Featured Collection",
      "limit": 3,
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "bg_color",
          "label": "Background color"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Shop Shakes",
          "label": "Button label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "OE Featured collections",
      "blocks": [
        {
          "type": "featured-collection"
        }
      ]
    }
  ]
}
