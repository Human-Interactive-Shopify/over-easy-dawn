<section class="FindUs section-{{ section.id }}" data-section-name="Find Us">
  <div class="FindUs-wrapper">
    <h2 class="desktop">&#9135;&#9135;&#9135;&#9135; &nbsp; Find us here &nbsp; &#9135;&#9135;&#9135;&#9135;</h2>
    <h2 class="mobile">&#9135;&#9135;&#9135;&#9135; &nbsp; Find us here! &nbsp; &#9135;&#9135;&#9135;&#9135;</h2>
    <div class="FindUs-scroller">
      <div class="FindUs-outer-wrap">
        {% for block in section.blocks %}
          <div class="FindUs-inner-wrap">
            <div class="FindUs-img-wrap {% if block.settings.is_small %}is-small{% endif %}">
              <img width="190" height="120" loading="lazy" src="{{ block.settings.merchant_image | image_url: width: 300 }}" alt="{{ block.settings.merchant_image.alt}}">
            </div>
          </div>
        {% endfor %}
        {% for block in section.blocks %}
          <div class="FindUs-inner-wrap">
            <div class="FindUs-img-wrap {% if block.settings.is_small %}is-small{% endif %}">
              <img width="190" height="120" loading="lazy" src="{{ block.settings.merchant_image | image_url: width: 300 }}" alt="{{ block.settings.merchant_image.alt}}">
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <a href="/pages/stores" class="button button--primary button-size--big button-color--black">Store locator</a>
  </div>
</section>

<style>
  .FindUs {
    background-color: var(--oe-color-grey-200);
  }
  .FindUs-wrapper {
    margin: 0 auto;
    text-align: center;
    padding: 24px 0;
    overflow-x: hidden;
  }
  .FindUs-wrapper > h2 {
    font-family: Gopher;
}
  .FindUs-wrapper > h2.desktop {
    display:none;
}
.FindUs-wrapper > h2.mobile {
  display: block;
  font-size: 16px;
  text-align: center;
  margin-bottom: 24px;
}
.FindUs-scroller {
  display: inline-block;
  animation: move 12s linear infinite;
  margin-bottom: 24px;
}
.FindUs-outer-wrap {
  display:flex;
  align-content: center;
  align-items: center;
}
@keyframes move {
  from {transform: translateX(0%);}
  to { transform: translateX(calc(-50%)); }
}
.FindUs-inner-wrap{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0 40px;
}

.FindUs-img-wrap {
  width: 190px;
  height: 100px;
}

.FindUs-img-wrap.is-small {
  width: 130px;
  height: 80px;
}

.FindUs-img-wrap img {
  width: 100%;
  object-fit: contain;
}

@media (min-width: 768px) {
  .FindUs-scroller {
    margin-bottom: 32px;
    animation: move 36s linear infinite;
  }
  .FindUs-inner-wrap{
    height: 150px;
    flex-direction: row;
  }
  .FindUs-img-wrap {
    padding-bottom: 0;
    border: none;
  }

}

@media (min-width: 1024px) {
  .FindUs-wrapper {
  }
  .FindUs-wrapper > h2.mobile {
    display:none;
  }
  .FindUs-wrapper > h2.desktop {
    display: block;
    font-size: 16px;
    text-align: center;
    margin-bottom: 32px;
  }
}

</style>


{% schema %}
  {
    "name": "OE Find Us",
    "blocks": [
      {
        "name": "OE Find Us",
        "type": "merchant",
        "settings": [
          {
            "type": "image_picker",
            "id": "merchant_image",
            "label": "Merchant Image"
          },
          {
            "type": "checkbox",
            "id": "is_small",
            "label": "Use smaller image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "OE Find Us",
        "category": "Layout"
      }
    ]
  }
{% endschema %}
