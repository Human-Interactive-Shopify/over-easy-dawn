<script>
  (function() {
    sectionEls = [...document.querySelectorAll('.shopify-section')];

    sectionEls.forEach(sectionEl => {
      if (sectionEl.classList.contains('section-header') || sectionEl.classList.contains('oe-section-names') || sectionEl.id === 'shopify-section-announcement-bar' ) return

      sectionEl.style.position = 'relative'

      const sectionNameEl = document.createElement('div');

      sectionClasses = [...sectionEl.classList].filter(className => className.indexOf('section') === -1 && className.indexOf('shopify') === -1 && className !== 'home-page' && className !== 'home-page-testimonials2')
      sectionNameEl.innerText = sectionClasses.join(' ').replace(/\-/g, ' ')

      const sectionNameNameEl = sectionEl.querySelector('[data-section-name]')
      if (sectionNameNameEl) {
        sectionNameEl.innerText = sectionNameNameEl.dataset.sectionName
      }

      sectionNameEl.style = `
        position: absolute;
        z-index: 999999;
        top: 40px;
        left: 20px;
        background-color: rgb(134 43 144);
        color: white;
        padding: 8px 16px;
        font-size: 24px;
        margin: 20px;
        font-weight: bold;
        border-radius: 5px;
        text-align: center;
        text-transform: uppercase;
        box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);
      `

      sectionEl.appendChild(sectionNameEl)
    })
    })()
</script>

